<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#080412"
    tools:context=".MainActivity2">

    <Button
        android:id="@+id/restart"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="214dp"
        android:backgroundTint="#4553D1"
        android:text="Yeniden oyna"
        app:backgroundTint="#4553D1"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto6" />

    <Button
        android:id="@+id/next"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="214dp"
        android:text="Yeni Bölüm"
        app:backgroundTint="#429C51"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/restart"
        app:layout_constraintTop_toBottomOf="@+id/foto2" />

    <Button
        android:id="@+id/basla"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="#1F4D91"
        android:backgroundTint="#4553D1"
        android:text="başla"
        app:backgroundTint="#1F4D91"
        app:cornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/next"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintHorizontal_bias="0.535"
        app:layout_constraintStart_toStartOf="@+id/next" />

    <ImageButton
        android:id="@+id/foto1"
        android:layout_width="208dp"
        android:layout_height="138dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="9dp"
        app:layout_constraintBottom_toTopOf="@+id/foto4"
        app:layout_constraintEnd_toEndOf="@+id/foto3"
        app:layout_constraintHorizontal_bias="0.636"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/m2_foto1" />

    <ImageButton
        android:id="@+id/foto4"
        android:layout_width="207dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-6dp"
        app:layout_constraintBottom_toTopOf="@+id/foto6"
        app:layout_constraintEnd_toEndOf="@+id/foto6"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/foto6"
        app:layout_constraintTop_toBottomOf="@+id/foto1"
        app:srcCompat="@drawable/m2_foto4" />

    <ImageButton
        android:id="@+id/foto3"
        android:layout_width="208dp"
        android:layout_height="138dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="420dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/foto5"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto2"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/m2_foto3" />

    <ImageButton
        android:id="@+id/foto2"
        android:layout_width="207dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="294dp"
        app:layout_constraintBottom_toTopOf="@+id/next"
        app:layout_constraintEnd_toEndOf="@+id/foto4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/foto4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/m2_foto2" />

    <ImageButton
        android:id="@+id/foto5"
        android:layout_width="208dp"
        android:layout_height="138dp"
        android:layout_marginTop="-6dp"
        android:layout_marginEnd="26dp"
        app:layout_constraintBottom_toBottomOf="@+id/foto6"
        app:layout_constraintEnd_toStartOf="@+id/next"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foto3"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/m2_foto5" />

    <ImageButton
        android:id="@+id/foto6"
        android:layout_width="207dp"
        android:layout_height="138dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="-6dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toTopOf="@+id/restart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.727"
        app:layout_constraintStart_toEndOf="@+id/foto5"
        app:layout_constraintTop_toBottomOf="@+id/foto4"
        app:srcCompat="@drawable/m2_foto6" />

</androidx.constraintlayout.widget.ConstraintLayout>